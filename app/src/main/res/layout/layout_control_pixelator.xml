<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gmail.shellljx.pixelate.widget.SettingWidget
        android:id="@+id/tv_settings"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_white_right_round_rect"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_settings"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_dot_settings" />
    </com.gmail.shellljx.pixelate.widget.SettingWidget>

    <com.gmail.shellljx.pixelate.widget.SaveWidget
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_white_left_round_rect"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="8dp"
        android:text="保存"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintRight_toLeftOf="@id/tv_settings"
        app:layout_constraintTop_toTopOf="parent" />

    <com.gmail.shellljx.pixelate.widget.CompareWidget
        android:id="@+id/iv_compare"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_compare"
        app:layout_constraintLeft_toLeftOf="@id/tv_settings"
        app:layout_constraintTop_toBottomOf="@id/tv_settings" />

    <com.gmail.shellljx.pixelate.widget.PaintWidget
        android:id="@+id/point_view"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>